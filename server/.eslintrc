{
  "env": {
    "es6": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "extends": ["airbnb-typescript/base"],
  "ignorePatterns": ["build", "node_modules"],
  "rules": {
    "no-await-in-loop": 0,
    "no-restricted-syntax": 0,
    "no-underscore-dangle": 0,
    "no-console": 0,
    "import/no-cycle": 0
  }
}
