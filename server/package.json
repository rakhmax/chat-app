{
  "name": "api",
  "version": "1.0.0",
  "main": "src/app.js",
  "license": "MIT",
  "scripts": {
    "start": "NODE_ENV=development nodemon --inspect=5858 -e ts,tsx --exec node -r ts-node/register -r dotenv/config ./src/app.ts dotenv_config_path=../server.env",
    "build": "tsc --sourceMap false",
    "serve": "NODE_ENV=production node -r dotenv/config ./build/app.js dotenv_config_path=../server.env",
    "lint": "eslint src/**/*"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "devDependencies": {
    "@types/koa": "^2.11.5",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-router": "^7.4.1",
    "@types/koa__cors": "^3.0.2",
    "@types/validator": "^13.1.0",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "dotenv": "^8.2.0",
    "eslint": "^7.11.0",
    "husky": "^4.3.0",
    "nodemon": "^2.0.4",
    "ts-node": "^9.0.0",
    "tsc": "^1.20150623.0",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "@koa/cors": "^3.0.0",
    "@types/bcrypt": "^3.0.0",
    "bcrypt": "^5.0.0",
    "koa": "^2.13.0",
    "koa-bodyparser": "^4.3.0",
    "koa-router": "^8.0.8"
  }
}
